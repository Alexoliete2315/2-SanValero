*&---------------------------------------------------------------------*
*& Include          Z_ENCUESTA_CREAR_SANV319_SEL
*&---------------------------------------------------------------------*


SELECTION-SCREEN BEGIN OF BLOCK block_datos WITH FRAME TITLE TEXT-001.
  PARAMETERS:
    p_dni   TYPE c LENGTH 9 OBLIGATORY,
    p_nom   TYPE c LENGTH 25 OBLIGATORY,
    p_apell TYPE c LENGTH 100,
    p_fnac  TYPE sydatum OBLIGATORY.
SELECTION-SCREEN END OF BLOCK block_datos.

SELECTION-SCREEN SKIP 1.

SELECTION-SCREEN BEGIN OF BLOCK block_redes WITH FRAME TITLE TEXT-002.
  SELECTION-SCREEN BEGIN OF LINE.

    SELECTION-SCREEN COMMENT 1(15) c_face FOR FIELD p_face.
    PARAMETERS p_face TYPE c AS CHECKBOX.
    SELECTION-SCREEN COMMENT 30(15) c_insta FOR FIELD p_insta.
    PARAMETERS p_insta TYPE c AS CHECKBOX.
    SELECTION-SCREEN COMMENT 50(15) c_twt FOR FIELD p_twt.
    PARAMETERS p_twt TYPE c AS CHECKBOX.
    SELECTION-SCREEN COMMENT 70(15) c_link FOR FIELD p_link.
    PARAMETERS p_link TYPE c AS CHECKBOX.
  SELECTION-SCREEN END OF LINE.

  SELECTION-SCREEN SKIP 1.

  SELECTION-SCREEN BEGIN OF LINE.
    SELECTION-SCREEN COMMENT 1(15) c_men2h.
    PARAMETERS p_men2h RADIOBUTTON GROUP hora. "MENOS DE DOS HORAS EN REDES",
    SELECTION-SCREEN COMMENT 30(15) c_mas2h.
    PARAMETERS  p_mas2h RADIOBUTTON GROUP hora. "MAS DE 2HORAS EN REDES",
  SELECTION-SCREEN END OF LINE.

SELECTION-SCREEN END OF BLOCK block_redes.

SELECTION-SCREEN BEGIN OF BLOCK block_otros WITH FRAME TITLE TEXT-003.
  PARAMETERS p_fenc TYPE d OBLIGATORY.

  SELECTION-SCREEN SKIP 1.

  SELECTION-SCREEN BEGIN OF LINE.
    SELECTION-SCREEN COMMENT 1(15) c_paro.
    PARAMETER p_paro  RADIOBUTTON GROUP actv.
    SELECTION-SCREEN COMMENT 30(15) c_activ.
    PARAMETER p_activ RADIOBUTTON GROUP actv.
  SELECTION-SCREEN END OF LINE.


SELECTION-SCREEN END OF BLOCK block_otros.

AT SELECTION-SCREEN ON p_dni.
  FIND REGEX '^[0-9]{8}[abcdefghijklmnñopqrstuvABCDEFGHIJKLMNÑOPQRSTUV]$'IN p_dni.
  IF sy-subrc  <> 0.
    MESSAGE e015(zenc_sanv319).
  ENDIF.

  AT SELECTION-SCREEN ON p_nom.
  IF p_nom CA '0123456789'.
    MESSAGE e002(zenc_sanv319).
  ENDIF.

AT SELECTION-SCREEN ON p_apell.
  IF p_apell CA '0123456789'.
    MESSAGE e003(zenc_sanv319).
  ENDIF.

INITIALIZATION.

  c_face = TEXT-c01.
  c_insta = TEXT-c02.
  c_twt = TEXT-c03.
  c_link = TEXT-c08.
  c_men2h = TEXT-C04.
  c_mas2h = TEXT-C05.
  c_paro = TEXT-c06.
  c_activ = TEXT-c07.
  p_fenc = sy-datum.